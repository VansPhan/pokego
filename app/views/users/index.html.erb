<div class="container">
	<% @users.each do |user| %>
		<div class="form">
			<h1><%= link_to "#{ user.first_name } #{ user.last_name }", user_path(user) %></h1>
			<h3><%= user.email %></h3>
			<div class="container">
				<% user.pokemons.each do |pokemon| %>
					<img class="img" src="https://img.pokemondb.net/sprites/black-white/anim/normal/<%= pokemon.name.downcase %>.gif" width="50px" height="50px">
				<% end %>
			</div>
		</div>
	<% end %>
</div>