<div class="form">
	<%= form_for @user, url: session_path, method: :post do |f| %>
		<div class="form-item">
			<h4>Email</h4>
			<%= f.text_field :email %>
		</div>

		<div class="form-item">
			<h4>Password</h4>
			<%= f.password_field :password %>
		</div>
		
		<div class="form-item">
			<%= f.submit "Sign In", class: "remove" %>
		</div>
	<% end %>
</div>